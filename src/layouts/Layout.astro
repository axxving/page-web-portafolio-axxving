---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			rel="shortcut icon"
			href="/public/imgs/logo.png"
			type="image/x-icon"
		/>
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
		/>
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/boxicons/2.1.1/css/boxicons.min.css"
		/>
		<title>Portfolio | {title}</title>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
			rel="stylesheet"
		/>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
			rel="stylesheet"
		/>
		<link
			rel="stylesheet"
			href="https://unpkg.com/swiper/swiper-bundle.min.css"
		/>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");

	:root {
		--azul: #8a9fa6;
		--celeste: #d9eaea;
		--blanco: #dadada;
		--gris: #575757;
		--gris-oscuro: #1f1f1f;
		--negro: #000000;
		--whatsapp: #30d24e;
		--facebook: #0866ff;
		--linkedin: #0a66c2;
		--instagram: #eb4668;
		--fondo-transparente: #cccccc17;
	}

	* {
		font-family: "Poppins", sans-serif;
		font-size: 1rem;
	}

	.icon-circle {
		padding: 10px 15px;
		background-color: var(--gris) !important;
		border-radius: 5px !important;
		margin-right: 20px !important;
	}

	.titulo {
		text-transform: uppercase !important;
		color: var(--blanco) !important;
	}

	a {
		text-decoration: none !important;
	}

	p,
	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		color: var(--blanco);
	}

	p {
		font-size: 16px;
		line-height: 2;
		margin-bottom: 16px;
	}

	.container-planeta {
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.planeta {
		filter: drop-shadow(5px 5px 5px rgba(0, 0, 0, 0.5));
		width: 80%;
		animation: floatAnimation 3s infinite;
	}

	.azul {
		color: var(--azul);
	}

	.text-center {
		color: var(--blanco) !important;
	}

	.navbar-nav .active {
		background-color: var(--azul);
	}

	.bi {
		margin-right: 5px;
	}

	.bip {
		margin-right: 0px;
	}

	.card {
		background-color: var(--fondo-transparente) !important;
		backdrop-filter: blur(10px) !important;
		margin-bottom: 20px;
	}

	.glass-card {
		background-color: var(--fondo-transparente);
		backdrop-filter: blur(10px);
		border-radius: 5px;

		display: flex;
		align-items: center;
		justify-content: center;
	}

	.glass-card-tec {
		background-color: rgba(255, 255, 255, 0.243);
		backdrop-filter: blur(10px);
		border-radius: 10px;
		margin: 10px;
		border: 1px solid #fff;

		display: flex;
		align-items: center;
		justify-content: center;
	}

	.card-body {
		display: flex;
		align-items: center;
		justify-content: space-between;
		flex-direction: column;
	}

	.card-title {
		font-weight: bold;
		color: var(--blanco) !important;
	}

	.icono-card {
		color: var(--blanco) !important;
	}

	.item-carrusel {
		background-color: transparent;
	}

	body {
		background-color: var(--negro) !important;
	}

	input {
		color: #fff !important;
	}

	.bix {
		font-size: 2rem;
		color: var(--azul);
	}

	.bixe {
		color: var(--azul);
	}

	@media (max-width: 575.98px) {
		.nombre {
			font-size: 2rem !important;
		}

		.planeta {
			margin-top: 50px;
		}
	}

	@media (min-width: 576px) {
		.nombre {
			font-size: 3rem !important;
		}

		.planeta {
			margin-top: 50px;
		}
	}

	@media (min-width: 768px) {
		.planeta {
			margin-top: 50px;
		}
	}

	@keyframes floatAnimation {
		0% {
			transform: translateY(0);
		}

		50% {
			transform: translateY(-10px);
		}

		100% {
			transform: translateY(0);
		}
	}

	.loader-wrapper {
		position: fixed;
		width: 100%;
		height: 100%;
		background: var(--negro);
		display: flex;
		justify-content: center;
		align-items: center;
		z-index: 9999;
		transition: opacity 0.5s;
		opacity: 1;
	}

	.loader {
		border: 8px solid #f3f3f3;
		border-top: 8px solid var(--azul);
		border-radius: 50%;
		width: 50px;
		height: 50px;
		animation: spin 1s linear infinite;
	}

	@keyframes spin {
		0% {
			transform: rotate(0deg);
		}

		100% {
			transform: rotate(360deg);
		}
	}

	body:not(.loaded) .loader-wrapper {
		opacity: 1;
	}

	body.loaded .loader-wrapper {
		opacity: 0;
		pointer-events: none;
	}

	#content {
		display: none;
	}

	body.loaded #content {
		display: block;
	}
</style>
